        <client_script><![CDATA[function confirmAndUpdate() {
    if (confirm("Do you want to update the field?")) {
        var ga = new GlideAjax('UpdateFieldAjax');
        ga.addParam('sysparm_name', 'updateField');
        ga.getXMLAnswer(function(response) {
            document.getElementById('myField').value = response;
        });
    }
}]]></client_script>
