        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // 获取 Request 的创建者（可根据你需求选 requested_for 或 opened_by）
    var requester = current.requested_for; // 或 current.opened_by

    if (!requester) return;

    var userGR = new GlideRecord('sys_user');
    if (userGR.get(requester) && userGR.manager) {
        var managerSysId = userGR.manager.sys_id.toString();

        // 获取当前 watch_list 内容，确保不重复添加
        var existingList = current.watch_list + '';
        if (!existingList.includes(managerSysId)) {
            if (existingList) {
                current.watch_list = existingList + ',' + managerSysId;
            } else {
                current.watch_list = managerSysId;
            }
            current.update(); // after business rule 需要手动保存
        }
    }

})(current, previous);
]]></script>
